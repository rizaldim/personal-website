{% extends "./page.njk" %}

{% block additionalCss %}
  {% include 'posts-list.css' %}
{% endblock %}

{% block body %}

<main>
  <h2>Posts (latest first)</h2>
  <ul class="posts-list">
  {%- for post in collections.post | reverse -%}
    <li>
      <a href="{{ post.url }}">
        {{ post.data.title }}
      </a>
    </li>
  {%- endfor -%}
  </ul>
</main>

{% endblock %}

